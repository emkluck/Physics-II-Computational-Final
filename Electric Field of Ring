Web VPython 3.2
from __future__ import division, print_function
from visual import *
scene.width = 1000
scene.height = 700
L = .8
Q = 2e-9
Nq = 3
dx = L/Nq
dQ = Q/Nq
## source charges
ring(pos=vector(-L/2,0,0), axis=vector(L,0,0), radius=1, opacity=0.2)
sources = []
x = -L/2 + dx/2
while x < L/2:
    a = sphere(pos=vector(x,0,0), radius=0.01, color=color.red, q=dQ)
    sources.append(a)
    x = x + dx
